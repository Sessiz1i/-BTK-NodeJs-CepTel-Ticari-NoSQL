div.modal.fade(id=`productModal` tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true")
	div.modal-dialog.modal-dialog-centered
		div.modal-content

script.
	let productModal = document.getElementById('productModal')
	productModal.addEventListener('show.bs.modal', event => {

		let button = event.relatedTarget,
			id = button.getAttribute('data-bs-id'),
			imageUrl = button.getAttribute('data-bs-image'),
			name = button.getAttribute('data-bs-name'),
			price = button.getAttribute('data-bs-price'),
			description = button.getAttribute('data-bs-description')

		let modalContent = productModal.querySelector('.modal-content')

		modalContent.innerHTML = `
				<div class="modal-header">
					<h5 class="modal-title fw-bold text-primary" id="modalName">${name}</h5>
					<button class="btn-close" type="button"  data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<img class="card-img-top h-50 w-100" src="/img/${imageUrl}" alt="${name}">
					<div class="pt-2">
						<p class="card-title">${description}</p>
						<span class="fw-bold h5">${price}&nbsp;</span><i class="fas fa-lira-sign"></i>
					</div>
					<div class="text-center pb-2">
						<form action="/cart" method="post">
							<button type = "submit" name = "productId" value="${id}">
								<i class="fas fa-shopping-cart fa-2x text-warning" role="button" title="Add to Cart"></i>
							</button>
						</form>
					</div>
				</div>`
		});



